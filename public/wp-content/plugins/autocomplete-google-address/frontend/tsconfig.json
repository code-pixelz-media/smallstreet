{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "strict": true,
    "outDir": "./dist", // Directory for compiled JS files
    "rootDir": "./src", // Source directory for TypeScript files
    "esModuleInterop": true,
    "lib": ["dom", "es2016"],
    "downlevelIteration": true,
    "skipLibCheck": true,
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["src/**/*", "global.d.ts"]
}
